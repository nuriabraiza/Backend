<h3 class="m-0 mb-4">Productos</h3>
{{#if products.payload.length}}
  <div class="row row-cols-1 row-cols-md-3 g-4" id="products">
    {{#each products.payload}}
      <div class="col">
        <div class="card" style="width: 18rem;">
          <img
            src="{{this.thumbnail}}"
            class="card-img-top product-img"
            alt="{{this.title}}"
          />
          <div class="card-body">
            <h5 class="card-title">{{this.title}} - ${{this.price}}</h5>
            <button
              data-id="{{this.id}}"
              class="btn btn-primary add-button"
            >Agregar al Carrito</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h2>Lo sentimos, no hay ning√∫n producto que mostrar. Vuelva mas tarde</h2>
{{/if}}
<h3 class="text-start mt-5 mb-5 fw-bolder" style="font-family: arial">
  Ingrese Producto
</h3>
<form action="/productos" method="POST">
  <div class="form-group">
    <label for="title" class="fst-italic">Nombre</label>
    <input
      type="text"
      class="form-control"
      name="title"
      id="title"
      required
      minlength="1"
    />
  </div>
  <div class="form-group">
    <label for="price" class="fst-italic">Precio</label>
    <input
      type="text"
      class="form-control"
      name="price"
      id="price"
      required
      minlength="1"
    />
  </div>
  <div class="form-group">
    <label for="thumbnail" class="fst-italic">Foto URL</label>
    <input
      type="text"
      class="form-control"
      name="thumbnail"
      id="thumbnail"
      required
      minlength="1"
    />
  </div>

  <input
    id="btnId"
    class="btn btn-success mt-3 mb-5"
    type="submit"
    value="Enviar"
  />
  <a href="/productos" class="btn btn-info mt-3 mb-5"> Ir a lista </a>
</form>
